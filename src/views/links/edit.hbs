<div class="container p-4">
    <div class="row">
        <div class="col-md-4 m-auto">
            <div class="card ">
                <div class="card-body">
                    <form action="/links/edit/{{link.id}}" method="post">
                        <div class="form-group mb-3">                            
                            <input type="text" class="form-control" name="title" placeholder=" {{link.title}} " autofocus required>
                        </div>
                        <div class="form-group mb-3">                            
                            <input type="url" class="form-control" name="url" placeholder=" {{link.url}} " required>
                        </div>
                        <div class="form-group">
                            <textarea name="description" id="" rows="2" class="form-control" placeholder="{{link.description}}" required></textarea>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-success">
                                Save
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>